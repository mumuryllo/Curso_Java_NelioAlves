package secao_introducao;

import java.util.Locale;
import java.util.Scanner;

import Entidades.Conta;

public class Programa3 {

	public static void main(String[] args) {
		 Locale.setDefault(Locale.US);
		 Scanner sc = new Scanner(System.in);
		 
		 
		 System.out.println("Entre com o número da conta: ");
		 int numero= sc.nextInt();
		 
		 System.out.println("Entre com o nome do títular da conta: ");
		 sc.nextLine();
		 String titular= sc.nextLine();
		 
		 System.out.println("Entre com o depósito incial (s/n): ");
		 char resposta = sc.nextLine().charAt(0);
		 
		 if(resposta == 's') {
			 System.out.println("Entre com o valor incial do depósito: ");
			 double DepositoInicial= sc.nextDouble();
			 Conta conta = new Conta(numero, titular, DepositoInicial);
		 }else {
			Conta conta = new Conta(numero, titular); 
		 }
		 
		 

		 
		 sc.close();
	}

}
